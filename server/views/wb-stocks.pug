extends stocks-table

append scripts
    script(src="/scripts/wb-table.js" type="module" defer)
    script(src="/scripts/table-filters.js" defer)

block filters
    div(class="table-filters")
        a(class="btn table-filter--btn table-filter-name--stock_status table-filter-value--outofstock") Нет на FBS
        a(class="btn table-filter--btn table-filter-name--stock_status table-filter-value--outofstockall") Нет на FBW и FBS
        a(class="btn table-filter--btn table-filter-name--stock_status table-filter-value--instockFBS") Есть на FBS
        a(class="btn table-filter--btn table-filter-name--stock_status table-filter-value--instockFBM") Есть на FBW
        a(class="btn table-filter--btn table-filter-name--stock_status table-filter-value--instockSome") Есть на FBW или FBS
    div(class="table-filters")
        a(class="btn table-filter--btn table-filter-name--isActual table-filter-value--notActual") Не актуальные
        a(class="btn table-filter--btn table-filter-name--isActual table-filter-value--all") Все по актуальности

block after-table
    p
        a.btn.addTokenToHref(href="/stocks/wb/new") Новый товар WB