extends allVariations

append scripts
    script(src="/scripts/pages/allVariationsPage.js" type="module" defer)

append tableCellName
    div.update-variation-stock--btn
        include three-dots-icon.pug
    form.update-variation-stock--form.disabled
        input(name="readyStock" type="number" min=0 placeholder='Готовые' required)
        if product.volume === '3 мл' || product.volume === '6 мл'
            input(name="dryStock" type="number" min=0  placeholder='Сухие')
        input.btn.update-variation-stock--submit-button(type='submit' value="OK")
        input(type="text" value=product.variationId hidden name="variationId" required)

//- append headerSection
    span.btn.redistribute-variations-stock--btn Перераспределить
block beforeTables
    section.align--right
        span.btn.redistribute-variations-stock--btn Перераспределить