extends layout
append scripts
    if authToken
        script.
          localStorage.setItem("authToken", "#{authToken}");
          localStorage.setItem("username", "#{username}");
          localStorage.setItem("authTokenExpires", Date.now() + 24 * 60 * 60 * 1000);


block content
    h1= title
    h2 Наличие
    nav.nav-links--block
        a.btn.nav-links--btn(href="/stocks/woo") Сайт
        a.btn.nav-links--btn(href="/stocks/ozon") Ozon
        a.btn.nav-links--btn(href="/stocks/yandex") Яндекс Маркет
        a.btn.nav-links--btn(href="/stocks/wb") Wilderries
    h2 Заказы
    nav.nav-links--block
        a.btn.nav-links--btn(href="/orders/all") Все заказы
    h2 Поставки
    nav.nav-links--block
        a.btn.nav-links--btn(href="/shipments/ozon") Создать поставку Ozon
    h2 База Данных
    nav.nav-links--block
        a.btn.nav-links--btn(href="/stocks/yandex/new") Новый товар Yandex
        a.btn.nav-links--btn(href="/stocks/wb/new") Новый товар WB
        a.btn.nav-links--btn(href="/stocks/ozon/new") Новый товар Ozon
